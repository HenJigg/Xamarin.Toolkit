<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockBox.View.AddAccount">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="保存"  Clicked="SaveClick"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="名称"/>
            <Entry Text="{Binding LockBoxDetail.Name}"/>
            
            <Label Text="账号"/>
            <Entry Text="{Binding LockBoxDetail.Account}"/>
            
            <Label Text="密码"/>
            <Entry Text="{Binding LockBoxDetail.PassWord}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>